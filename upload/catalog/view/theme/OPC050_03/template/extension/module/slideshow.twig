<div class="slideshow-panel col-sm-9">
<div class="ttloading-bg ttloader"></div>
<div class="swiper-viewport">
  <div id="slideshow{{ module }}" class="slideshow-main swiper-container">
    <div class="swiper-wrapper"> 
	  {% for banner in banners %}
      	<div class="swiper-slide text-center">
			{% if banner.link %}
				<a href="{{ banner.link }}">
				<img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />
				</a>
				{% else %}
				<img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />
			{% endif %}
		</div>
      {% endfor %}
   </div>
   	<div class="swiper-pagination slideshow{{ module }}"></div>
  <div class="swiper-pager">
    <div class="swiper-button-prev"></div>
	<div class="swiper-button-next"></div>
  </div>
   </div>
</div>
</div>
<div id="ttcmsrightbanner" class="col-sm-3">
	<div class="ttrightbannerblock">
		<div class="ttrightbanner-left">
			<div class="ttrightbanner1 ttrightbanner">
				<div class="ttrightbanner-img"><a href="#"><img src="image/catalog/demo/banners/rightbanner-01.jpg" alt="rightbanner-01.jpg"></a></div>
				<div class="ttbanner-desc">
					<div class="subtitle">Smarts Tech</div>
					<div class="button"><a class="buy_now" href="#">go, shop</a></div>
				</div>
			</div>
			<div class="ttrightbanner2 ttrightbanner">
				<div class="ttrightbanner-img"><a href="#"><img src="image/catalog/demo/banners/rightbanner-02.jpg" alt="rightbanner-02.jpg"></a></div>
				<div class="ttbanner-desc">
					<div class="desc">Next Generation</div>
					<div class="title">New Arrivals</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script><!--
$('#slideshow{{ module }}').swiper({
	mode: 'horizontal',
	slidesPerView: 1,
	pagination: '.slideshow{{ module }}',
	paginationClickable: true,
	nextButton: '.swiper-button-next',
    prevButton: '.swiper-button-prev',
    spaceBetween: 0,
	effect: 'fade',
	autoplay: 2500,
    autoplayDisableOnInteraction: true,
	loop: true
});
--></script>