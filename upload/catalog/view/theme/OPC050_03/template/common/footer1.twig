<footer>
{% if footer_top %}
<div class="footer-top">
{{ footer_top }}
</div>
{% endif %}
<div class="footer-container">
<div class="container">
	<div class="row">
	{% if footer_left %}
	<div class="footer-column footer-left-cms col-sm-6">
	{{ footer_left }}
	</div>
	{% endif %}
      
	  {% if informations %}
      <div class="col-sm-4 footer-column footer-info footer-{{ text_information }}">
        <h5>{{ text_information }}</h5>
        <ul class="list-unstyled">
		  <li><a href="{{ manufacturer }}">{{ text_manufacturers }}</a></li>
          <li><a href="{{ voucher }}">{{ text_voucher }}</a></li>
          <li><a href="{{ affiliate }}">{{ text_affiliate }}</a></li>
          <li><a href="{{ special }}">{{ text_special }}</a></li>
		  <li><a href="{{ sitemap }}">{{ text_sitemap }}</a></li>
		  <li><a href="{{ contact }}">{{ text_contact }}</a></li>		  
         {% for information in informations %}
          <li><a href="{{ information.href }}">{{ information.title }}</a></li>
          {% endfor %}
		  
        </ul>
      </div>
    {% endif %}
	<div class="col-sm-2 footer-column footer-{{ text_account }}">
        <h5>{{ text_account }}</h5>
        <ul class="list-unstyled">
          <li><a href="{{ account }}">{{ text_account }}</a></li>
          <li><a href="{{ order }}">{{ text_order }}</a></li>
          <li><a href="{{ wishlist }}">{{ text_wishlist }}</a></li>
          <li><a href="{{ newsletter }}">{{ text_newsletter }}</a></li>
		  <li><a href="{{ return }}">{{ text_return }}</a></li>
        </ul>
      </div>

	{% if footer_right %}
	  <div class="footer-column footer-right-cms col-sm-6">
	 {{ footer_right }}
	  </div>
	{% endif %}
	</div>
	<div class="bottom-footer col-sm-12">
		{% if footer_bottom %}
		<div class="footer-bottom-cms footer-column col-sm-6">
		{{ footer_bottom }}
		</div>
		{% endif %}
      </div>
	</div>
</div>
	

<div class="footer-bottom">
	<div class="container">
	<div class="footer-bottom-link col-sm-6">
		<p>{{ powered }}</p>
	</div>
	</div>
</div>
</footer>